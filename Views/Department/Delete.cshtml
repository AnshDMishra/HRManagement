@model HRManagement.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-danger">
            <div class="card-body">
                <h3 class="card-title text-center text-danger fw-bold blink-text">
                    ⚠️ Are you sure you want to delete this?
                </h3>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 text-secondary">Department Name</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.DepartmentName)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Dept_Id" />

                    <div class="text-center mt-4 d-flex justify-content-center gap-3">
                        <input type="submit" value="Delete" class="btn btn-danger px-4" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

