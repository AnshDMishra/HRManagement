@model HRManagement.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <h3 class="card-title text-center text-primary">Department Details</h3>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 text-secondary">Department ID</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Dept_Id)</dd>

                    <dt class="col-sm-4 text-secondary">Department Name</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.DepartmentName)</dd>
                </dl>

                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Dept_Id" class="btn btn-warning px-4">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
