@model HRManagement.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h1 class="text-primary">Edit Department</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <h4 class="card-title text-center text-secondary mb-4">Update Department</h4>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Dept_Id" />

                    <div class="form-group mb-3">
                        <label asp-for="DepartmentName" class="form-label fw-bold">Department Name</label>
                        <input asp-for="DepartmentName" class="form-control p-2" placeholder="Enter department name" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-center gap-3">
                        <input type="submit" value="Save" class="btn btn-success px-4" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}