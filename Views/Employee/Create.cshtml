@model HRManagement.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-body">
                <h3 class="card-title text-center text-primary fw-bold">Create Employee</h3>
                <hr />

                <form asp-action="Save">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Employee Name -->
                    <div class="form-group mb-3">
                        <label asp-for="Emp_Name" class="form-label fw-bold">Employee Name</label>
                        <input asp-for="Emp_Name" class="form-control p-2" placeholder="Enter employee name" required />
                        <span asp-validation-for="Emp_Name" class="text-danger"></span>
                    </div>

                    <!-- Age -->
                    <div class="form-group mb-3">
                        <label asp-for="Emp_Age" class="form-label fw-bold">Age</label>
                        <input asp-for="Emp_Age" class="form-control p-2" placeholder="Enter age" required />
                        <span asp-validation-for="Emp_Age" class="text-danger"></span>
                    </div>

                    <!-- Gender -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Gender</label>
                        <div class="d-flex align-items-center gap-4">
                            <div class="form-check">
                                <input type="radio" asp-for="Emp_Gender" value="Male" class="form-check-input" required />
                                <label class="form-check-label">Male</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" asp-for="Emp_Gender" value="Female" class="form-check-input" />
                                <label class="form-check-label">Female</label>
                            </div>
                        </div>
                        <span asp-validation-for="Emp_Gender" class="text-danger"></span>
                    </div>

                    <!-- Mobile -->
                    <div class="form-group mb-3">
                        <label asp-for="Emp_Mobile" class="form-label fw-bold">Mobile</label>
                        <input asp-for="Emp_Mobile" class="form-control p-2" placeholder="Enter mobile number" required />
                        <span asp-validation-for="Emp_Mobile" class="text-danger"></span>
                    </div>

                    <!-- Salary -->
                    <div class="form-group mb-3">
                        <label asp-for="Emp_Salary" class="form-label fw-bold">Salary</label>
                        <input asp-for="Emp_Salary" class="form-control p-2" placeholder="Enter salary" required />
                        <span asp-validation-for="Emp_Salary" class="text-danger"></span>
                    </div>

                    <!-- Department -->
                    <div class="form-group mb-3">
                        <label asp-for="Dept_Id" class="form-label fw-bold">Department</label>
                        <select asp-for="Dept_Id" class="form-control p-2" required>
                            <option value="">---Select Department---</option>
                            @foreach (var item in ViewBag.Departments)
                            {
                                <option value="@item.Dept_Id">@item.DepartmentName</option>
                            }
                        </select>
                        <span asp-validation-for="Dept_Id" class="text-danger"></span>
                    </div>

                    <!-- Employee Status -->
                    <div class="form-group form-check mb-3">
                        <input class="form-check-input" asp-for="Emp_Status" />
                        <label class="form-check-label fw-bold">Active</label>
                    </div>

                    <!-- Save & Back Buttons -->
                    <div class="text-center d-flex justify-content-center gap-3">
                        <input type="submit" value="Save" class="btn btn-success px-4 fw-bold" />
                        <a asp-action="Index" class="btn btn-secondary px-4 fw-bold">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
