@model HRManagement.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-danger">
            <div class="card-body">
                <h3 class="card-title text-center text-danger fw-bold blink-text">
                    ⚠️ Are you sure you want to delete this?
                </h3>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 text-secondary">Employee Name</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Emp_Name)</dd>

                    <dt class="col-sm-4 text-secondary">Age</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Emp_Age)</dd>

                    <dt class="col-sm-4 text-secondary">Gender</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Emp_Gender)</dd>

                    <dt class="col-sm-4 text-secondary">Mobile</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Emp_Mobile)</dd>

                    <dt class="col-sm-4 text-secondary">Salary</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Emp_Salary)</dd>

                    <dt class="col-sm-4 text-secondary">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Emp_Status ? "bg-success" : "bg-danger")">
                            @(Model.Emp_Status ? "Active" : "Inactive")
                        </span>
                    </dd>

                    <dt class="col-sm-4 text-secondary">Department</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.DepartmentName)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Emp_ID" />

                    <div class="text-center mt-4 d-flex justify-content-center gap-3">
                        <input type="submit" value="Delete" class="btn btn-danger px-4" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


